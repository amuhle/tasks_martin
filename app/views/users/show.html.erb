<%- model_class = User -%>
<% content_for :links do %>
  <b class="brand" >Show User</b>
<% end %>

<div class="container">
  <div class="row">
    <div class="span3">
      <%= image_tag @user.photo.url %>
    </div>
    <div class="span9">
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
        <dd><%= @user.name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
        <dd><%= @user.email %></dd>
        <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
        <dd><%= @user.phone %></dd>
        <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
        <dd><%= @user.role %></dd>
        <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
        <dd><%= @user.status %></dd>
      </dl>
    </div>
  </div>
</div>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              :back, :class => 'btn'  %>
  <%= if current_user.id.equal?(@user.id)
        link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_registration_path, :class => 'btn btn-primary'
      end
  %>
</div>
