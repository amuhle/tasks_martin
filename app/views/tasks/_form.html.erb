<%= form_for [@user, @task], :html => { :class => 'form-horizontal' } do |f| %>

  <%= render_error(@task,f,:title) %>

  <%= render_error(@task,f,:description) %>

  <div class="control-group">
    <%= f.label :time_to_finish, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :time_to_finish, :class => 'date_select' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :status, Task::STATUS %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_tasks_path(@user), :class => 'btn' %>
  </div>
<% end %>
